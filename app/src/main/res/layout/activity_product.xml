<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:fitsSystemWindows="true"
                                       tools:context="zpe.jiakeyi.com.zhanpaieaw.activity.home.ProductActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_pd"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="24px"
                android:src="@mipmap/product_icon_back"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/share_pd"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/product_icon_share"/>

            <ImageView
                android:id="@+id/sc_pd"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="24px"
                android:src="@mipmap/product_icon_collection"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <ScrollView
            android:id="@+id/sc_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                        <ImageView
                            android:id="@+id/tp_pd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/product_img_details"/>

                        <TextView
                            android:layout_width="80px"
                            android:layout_height="42px"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="10px"
                            android:layout_marginRight="20px"
                            android:background="@drawable/public_rectangle_24"
                            android:gravity="center"
                            android:text="1/4"
                            android:textColor="@color/white"
                            android:textSize="24px"/>
                    </com.zhy.autolayout.AutoRelativeLayout>

                    <TextView
                        android:id="@+id/cp_titler"
                        android:layout_width="678px"
                        android:layout_height="wrap_content"
                        android:layout_margin="24px"
                        android:layout_marginTop="50px"
                        android:text="WIGGENS DIGTOR 22 台式离心机 实验室离心机"
                        android:textColor="#333333"
                        android:textSize="32px"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/gs_name"
                        android:layout_width="678px"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24px"
                        android:layout_marginLeft="24px"
                        android:layout_marginTop="32px"
                        android:text="北京桑羿实验室仪器研究所"
                        android:textColor="#666666"
                        android:textSize="28px"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        android:background="#f2f2f2"/>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginTop="20px"
                        android:orientation="vertical">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="97px"
                            android:layout_marginLeft="24px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="地区"
                                android:textColor="@color/black"
                                android:textSize="28px"/>

                            <TextView
                                android:id="@+id/dq_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="78dp"
                                android:text="北京"
                                android:textSize="28px"/>
                        </com.zhy.autolayout.AutoLinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:background="#f2f2f2"/>
                    </com.zhy.autolayout.AutoLinearLayout>


                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="vertical">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="97px"
                            android:layout_marginLeft="24px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="厂商类型"
                                android:textColor="@color/black"
                                android:textSize="28px"/>

                            <TextView
                                android:id="@+id/cslx_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:text="北京"
                                android:textSize="28px"/>
                        </com.zhy.autolayout.AutoLinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:background="#f2f2f2"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="vertical">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="97px"
                            android:layout_marginLeft="24px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="品牌"
                                android:textColor="@color/black"
                                android:textSize="28px"/>

                            <TextView
                                android:id="@+id/pp_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="78dp"
                                android:text="北京"
                                android:textSize="28px"/>
                        </com.zhy.autolayout.AutoLinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:background="#f2f2f2"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="vertical">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="97px"
                            android:layout_marginLeft="24px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="型号"
                                android:textColor="@color/black"
                                android:textSize="28px"/>

                            <TextView
                                android:id="@+id/xh_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="78dp"
                                android:text="北京"
                                android:textSize="28px"/>
                        </com.zhy.autolayout.AutoLinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:background="#f2f2f2"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        android:background="#f2f2f2"/>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="vertical">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="97px"
                            android:layout_marginLeft="24px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="应用领域"
                                android:textColor="@color/black"
                                android:textSize="28px"/>

                            <TextView
                                android:id="@+id/yyly_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:text="北京"
                                android:textSize="28px"/>
                        </com.zhy.autolayout.AutoLinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:background="#f2f2f2"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        android:background="#f2f2f2"/>


                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <WebView
                        android:id="@+id/web_product"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></WebView>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>


        </ScrollView>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/product_icon_phone"
                    android:drawablePadding="10px"
                    android:gravity="center"
                    android:text="打电话"
                    android:textColor="#333333"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bule"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/product_icon_news"
                    android:drawablePadding="10px"
                    android:gravity="center"
                    android:text="发消息"
                    android:textColor="#f7f7f7"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/rt_top"
        android:layout_width="88px"
        android:layout_height="88px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="146px"
        android:layout_marginRight="24px"
        android:src="@mipmap/product_icon_top"/>
</com.zhy.autolayout.AutoRelativeLayout>
