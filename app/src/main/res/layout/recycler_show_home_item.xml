<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_show_recycle_item"
            android:layout_width="350px"
            android:layout_height="385px"
            android:src="@mipmap/product_img_list" />

        <TextView
            android:id="@+id/tv_show_recycle_item_name"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:text="崂应3026型 红外烟气综合分析仪 智能"
            android:textColor="#333333"
            android:textSize="28px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginBottom="10px"
            android:layout_width="357px"
            android:layout_height="wrap_content"
            android:gravity="left">

            <TextView
                android:id="@+id/tv_show_recycle_item_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginTop="16px"
                android:text="天津"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_show_recycle_item_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14px"
                android:layout_marginTop="16px"
                android:text="西青"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_show_recycle_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="16px"
                android:text="522人看过"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:background="#f7f7f7" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="6px"
        android:layout_height="match_parent"
        android:background="#f7f7f7" />
</com.zhy.autolayout.AutoLinearLayout>