<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     xmlns:tools="http://schemas.android.com/tools"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="@color/white"
                                     android:fitsSystemWindows="true"
                                     android:orientation="vertical"
                                     tools:context="zpe.jiakeyi.com.zhanpaieaw.activity.login.VerificationActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/white"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_return"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="32px"
            android:layout_marginTop="32px"
            android:src="@mipmap/home_icon_back"/>

        <TextView
            android:id="@+id/image_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="578px"
            android:layout_marginTop="35px"
            android:gravity="center"
            android:text="注册"
            android:textColor="#666666"
            android:textSize="28px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="220px"
                android:layout_height="50px"
                android:src="@mipmap/login_icon_logo"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:layout_width="620px"
                android:layout_height="100px"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@null"
                android:drawablePadding="8dp"
                android:hint="用户名/手机号"
                android:inputType="number"
                android:lines="1"
                android:maxLength="11"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/seekColorText"
                android:textSize="13sp"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px">

            <EditText
                android:layout_width="400px"
                android:layout_height="match_parent"
                android:layout_marginLeft="60px"
                android:background="@null"
                android:drawablePadding="8dp"
                android:hint="请输入验证码"
                android:lines="1"
                android:maxLength="6"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/seekColorText"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="获取验证码"
                android:textColor="@color/myblue"/>
        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="600px"
            android:layout_height="100px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="忘记密码?"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="600px"
            android:layout_height="88px"
            android:layout_marginTop="20px"
            android:background="@drawable/shape_bottom"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/register_text_login"
            android:layout_width="600px"
            android:layout_height="100px"
            android:gravity="center"
            android:text="账号密码登录"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="60px"
            android:paddingRight="60px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:background="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:text="其他登录方式"
                android:textSize="24px"/>


        </RelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="96px"
                android:layout_height="96px"
                android:background="@mipmap/login_icon_qq"/>

            <TextView
                android:layout_width="96px"
                android:layout_height="96px"
                android:layout_marginLeft="184px"
                android:background="@mipmap/login_icon_weixin"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginTop="60px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录即代表您已同意"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户注册协议》"
                android:textColor="@color/bule"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>